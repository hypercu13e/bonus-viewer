{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"erasableSyntaxOnly": true,
		"lib": ["esnext", "dom", "dom.iterable"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"outDir": "./build/",
		"rewriteRelativeImportExtensions": true,
		"rootDir": "./src/",
		"target": "esnext",
		"verbatimModuleSyntax": true
	},
	"include": ["./src/**/*.mts"]
}
